.footer
  bottom 0
  height 60px // Height of the footer
  margin 0
  padding 0
  position absolute
  width 100%

.footer_row
  margin-left 16.33%
  padding 0
  width 83.33%

.footer_entries
  margin 0
  padding 0

.footer_entry
  font-size 83%
  margin 0
  min-width 10%
  padding 0
  text-align center

.nav-pills li.footer_entry a
  color #60a8e2
  background-color #fdfdfd
  transition all 0.6s ease 0s

.nav-pills li.active_footer_entry a
.nav-pills li.footer_entry a:hover
.nav-pills li.footer_entry a:focus
  color white
  background-color #60a8e2
  transition all 0.6s ease 0s
