  margin-bottom 1%
  margin-left 0.28%
  display flex

.navbar_entries
  font-size 125%
  margin 0
  padding 0
  margin-left 16.33%
  width 100%

.navbar_entry
  min-width 16%
  padding-right 0.5%
  text-align center

